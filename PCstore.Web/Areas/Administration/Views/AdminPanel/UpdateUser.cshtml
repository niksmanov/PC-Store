@model UserViewModel

<h3 align="center">@ViewData["Title"]</h3>

<div class="container">
    @using (Html.BeginForm("UpdateUser", "AdminPanel", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Update current user profile</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(x => x.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @{
                var roleName = new List<string>() { "User", "Admin" };
            }
            @Html.LabelFor(x => x.Role, "Role", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.Role, new SelectList(roleName), new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.HiddenFor(x => x.PasswordHash)
            @Html.HiddenFor(x => x.SecurityStamp)
            @Html.HiddenFor(x => x.CreatedOn)
            <div class="col-md-offset-5 col-md-10">
                <input type="submit" class="btn btn-primary" value="@ViewData["Title"]" />
            </div>
        </div>
                }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
